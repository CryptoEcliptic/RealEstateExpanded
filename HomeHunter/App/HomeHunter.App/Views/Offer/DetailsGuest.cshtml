@model HomeHunter.Models.ViewModels.Offer.OfferDetailsGuestViewModel
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/lib/assets/modal_images.css">
<div class="row backgr-img-details">
    <div class="col-md-6 details-real-estate-container">
        <br />
        <br />
        @if (this.TempData["SuccessfullSubmition"] != null)
        {<div class="row">
                <div class="col-md-10 col-md-offset-1 pad">
                    <div class="alert alert-info alert-dismissible fade in text-center" role="alert">
                        <strong>@TempData["SuccessfullSubmition"]</strong>
                        <button type="button" class="close-h" style="font-size:30px; padding-right:30px" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                </div>
            </div>
        }
        <div class="row">
            <h4 class="offset-3 home-hunter-center" style="color:brown"><strong>@Model.RealEstateType, @Model.Area кв. м., @Model.Neighbourhood, Цена € @Model.Price</strong></h4>
        </div>

        <table class="table table-estate-details table-responsive-md hover-table">
            <tbody style="background-color: aliceblue">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.ReferenceNumber)</th>
                    <td class="col-md-2">@Html.DisplayFor(model => model.ReferenceNumber)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.City)</th>
                    <td>@Html.DisplayFor(model => model.City)</td>
                </tr>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Neighbourhood)</th>
                    <td>@Html.DisplayFor(model => model.Neighbourhood)</td>
                </tr>
                @if (Model.Village != null)
                {
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Village)</th>
                        <td>@Html.DisplayFor(model => model.Village)</td>
                    </tr>
                }
                <tr>
                    @if (Model.Address != null)
                    {
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Address)</th>
                        <td>@Html.DisplayFor(model => model.Address)</td>
                    </tr>
                }

                    <tr>
                        <th>@Html.DisplayNameFor(model => model.RealEstateType)</th>
                        <td>@Html.DisplayFor(model => model.RealEstateType)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.BuildingType)</th>
                        <td>@Html.DisplayFor(model => model.BuildingType)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Area)</th>
                        <td>@Html.DisplayFor(model => model.Area)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Price)</th>
                        <td>@Html.DisplayFor(model => model.Price)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.PricePerSquareMeter)</th>
                        <td>@Html.DisplayFor(model => model.PricePerSquareMeter)</td>
                    </tr>
                    <tr>
                        <th class="col-md-1">@Html.DisplayNameFor(model => model.FloorNumber)</th>
                        <td>@Html.DisplayFor(model => model.FloorNumber)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.BuildingTotalFloors)</th>
                        <td>@Html.DisplayFor(model => model.BuildingTotalFloors)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Year)</th>
                        <td>@Html.DisplayFor(model => model.Year)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.HeatingSystem)</th>
                        <td>@Html.DisplayFor(model => model.HeatingSystem)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Elevator)</th>
                        <td>@Html.DisplayFor(model => model.Elevator)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Furnitures)</th>
                        <td>@Html.DisplayFor(model => model.Furnitures)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ParkingPlace)</th>
                        <td>@Html.DisplayFor(model => model.ParkingPlace)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Garage)</th>
                        <td>@Html.DisplayFor(model => model.Garage)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Basement)</th>
                        <td>@Html.DisplayFor(model => model.Basement)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Celling)</th>
                        <td>@Html.DisplayFor(model => model.Celling)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Yard)</th>
                        <td>@Html.DisplayFor(model => model.Yard)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Comments)</th>
                        <td>@Html.DisplayFor(model => model.Comments)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.AgentName)</th>
                        <td>@Html.DisplayFor(model => model.AgentName)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.ContactNumber)</th>
                        <td>@Html.DisplayFor(model => model.ContactNumber)</td>
                    </tr>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.CreatedOn)</th>
                        <td>@Html.DisplayFor(model => model.CreatedOn)</td>
                    </tr>
                </tbody>
            </table>
            <br />
            <div class="col-md-offset-4" style="padding-left:50px">
                @if (Model.OfferType == "Продажба")
                {
                    <a type="button" asp-action="IndexSales" class="btn btn-info-h btn-sm" style="width:180px">Назад</a>
                }
                else
                {
                    <a type="button" asp-action="IndexRentals" class="btn btn-info-h btn-sm" style="width:180px">Назад</a>
                }

            </div>
        </div>
        <br />
        <br />

        <div class="col-md-6 details-real-estate-container paddingElement" style="padding-right:20px;">

            @foreach (var image in Model.Images)
            {
                <img id="myImg" src="~/images/@image" class="myImages img-thumbnail img-h-block">
                <div id="myModal" class="modal">
                    <!-- The Close Button -->
                    <span class="close">&times;</span>
                    <!-- Modal Content (The Image) -->
                    <img class="modal-content" id="img01">
                    <!-- Modal Caption (Image Text) -->
                    <div id="caption"></div>
                </div>
            }

        </div>
    </div>
    <!--Contact Starts-->
    @{
        string offerId = Model.Id;
        string refNumber = Model.ReferenceNumber;


        <div id="contact">
            <br />
            <br />
            <div class="container contactform center">
                <h4 class="text-center wowload fadeInUp">Направете запитване за тази обява</h4>
                <div class="row wowload fadeInLeftBig">
                    <div class="col-sm-6 col-sm-offset-3 col-xs-12">
                        <form asp-controller="Home" asp-action="Contact" method="post">
                            <input type="text" readonly asp-for="@Model.ContactFormBindingModel.ReferenceNumber" value="@refNumber">
                            <div class="form-group">
                                <input type="email" placeholder="Email" asp-for="@Model.ContactFormBindingModel.Email" class="form-control" id="Email" />
                                <span asp-validation-for="@Model.ContactFormBindingModel.Email" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <input type="text" placeholder="Име" asp-for="@Model.ContactFormBindingModel.Name" class="form-control" id="Name" />
                                <span asp-validation-for="@Model.ContactFormBindingModel.Name" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <textarea placeholder="Съобщение" asp-for="@Model.ContactFormBindingModel.Message" class="form-control" rows="5"></textarea>
                                <span asp-validation-for="@Model.ContactFormBindingModel.Message" class="text-danger"></span>
                            </div>
                            <input type="hidden" asp-for="@Model.ContactFormBindingModel.OfferId
                               " value="@offerId" />
                            <button type="submit" class="btn btn-primary" style="border-radius:5px"><i class="fa fa-paper-plane"></i> Изпрати</button>
                        </form>
                    </div>
                </div>
            </div>
            <br />
        </div>
    }
    <!--Contact Ends-->


    @section Scripts{

        <script src="~/lib/assets/modal_images.js" asp-append-version="true"></script>
        <partial name="_ValidationScriptsPartial" />


    }


