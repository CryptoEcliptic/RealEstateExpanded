@model HomeHunter.App.MLPricePrediction.InputModel;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<link rel="stylesheet" href="~/lib/assets/modal_images.css">

<div class="container-fluid backgr-img-details paddingElement" style="height:auto">
    <br />
    <div class="jumbotron jumbotron-fluid col-md-5 col-md-offset-6" style="border-radius:5px;">
        <div class="container">
            <h4>Колко струва апартаментът ми?</h4>
            <p style="font-size:13pt;">Чрез попълване на формата отдолу можете да получите информация за проблизителната цена на апартамента Ви. Моля, имайте предвид, че изчисляването на цената става на базата на математически модел и точността не е гарантирана. Към момента услугата е налична само за София-град.</p>
        </div>
    </div>
    <div class="container-fluid">
        <form method="post" class="form border-primary-4 rounded col-md-6 col-md-offset-5" style="padding-left:270px;">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="col-md-5" style="min-width:160px">
                <div id="name-and-price-holder" class="d-flex justify-content-between">
                    <div class="form-group mx-auto w-45">
                        <input type="text"
                               class="form-control text-primary text-center"
                               id="Size"
                               placeholder="Площ в кв. м."
                               asp-for="Size">
                        <span asp-validation-for="Size" class="text-danger"></span>
                    </div>
                    <div class="form-group mx-auto w-45">
                        <input type="number"
                               class="form-control text-primary text-center"
                               id="floor"
                               placeholder="Етаж..."
                               asp-for="Floor">
                        <span asp-validation-for="Floor" class="text-danger"></span>
                    </div>
                    <div class="form-group mx-auto w-45">
                        <input type="number"
                               class="form-control text-primary text-center"
                               id="totalFloors"
                               placeholder="Брой етажи..."
                               asp-for="TotalFloors">
                        <span asp-validation-for="TotalFloors" class="text-danger"></span>
                    </div>
                    <div class="form-group mx-auto w-45">
                        <select class="form-control text-center" id="centralHeating" asp-for="CentralHeating">
                            <option selected disabled>--- Има ли ТЕЦ ---</option>
                            <option>ДА</option>
                            <option>НЕ</option>
                            <option>Лок.отопл.</option>

                        </select>
                        <span asp-validation-for="District" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="col-md-5" style="min-width:160px">
                <div class="form-group mx-auto w-45">
                    <input type="number"
                           class="form-control text-primary text-center"
                           id="totalFloors"
                           placeholder="Година..."
                           asp-for="Year">
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-45">
                    <select class="form-control text-center" id="type" asp-for="District">
                        <option selected disabled>--- Район ---</option>
                        @foreach (var type in (IEnumerable
                       <string>
                           )this.ViewData["Districts"])
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                    <span asp-validation-for="District" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-45">
                    <select class="form-control text-center" id="type" asp-for="Type">
                        <option selected disabled>---Тип апартамент ---</option>
                        @foreach (var type in (IEnumerable
                       <string>
                           )this.ViewData["AppartmentTypes"])
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group mx-auto w-45">
                    <select class="form-control text-center" id="type" asp-for="BuildingType">
                        <option selected disabled>--- Тип строителство ---</option>
                        @foreach (var type in (IEnumerable
                       <string>
                           )this.ViewData["BuildingTypes"])
                        {
                            <option value="@type">@type</option>
                        }
                    </select>
                    <span asp-validation-for="BuildingType" class="text-danger"></span>
                </div>
                <hr class="hr-2 bg-primary mt-4">
                <div class="d-flex justify-content-center col-md-12">
                    <button class="btn btn-primary font-weight-bold" style="min-width:160px">Провери</button>
                </div>
            </div>

        </form>

        <div class="form border-primary-4 rounded col-md-3 col-md-offset-7" style="padding-left:60px;">
            <br />
            <div class="d-flex justify-content-center">
            </div>
            <input type="text" readonly
                   class="form-control text-center"
                   placeholder="Прогнозна стойност в Евро"
                   asp-for="Price">
        </div>
    </div>
</div>

@section Scripts{

    <partial name="_ValidationScriptsPartial" />
}

