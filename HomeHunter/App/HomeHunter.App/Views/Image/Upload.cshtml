@model HomeHunter.Models.BindingModels.Image.ImageUploadBindingModel
@{
    ViewData["Title"] = "Upload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/lib/assets/upload_image.css">

<div class="row paddingElement">
    <div class="container d-flex justify-content-around">
        <br />
        <br />
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="col-md-10 col-md-offset-1">
                <div class="alert alert-danger alert-dismissible fade in text-center" role="alert">
                    <strong>@ViewData["ErrorMessage"]</strong>
                    <button type="button" class="close-h" style="font-size:30px; padding-right:30px" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
            <div style="padding-bottom:85px"></div>
        }
        <h4 style="text-align:center">Качване на снимки</h4>

        <partial name="_ImageUploadPartial" />

    </div>
</div>

@section Scripts{

    <script src='//production-assets.codepen.io/assets/common/stopExecutionOnTimeout-b2a7b3fe212eaa732349046d8416e00a9dec26eb7fd347590fbced3ab38af52e.js'></script>

    <script src="~/js/small-image-upload.js" asp-append-version="true"></script>
    <script src="~/js/image_upload_error_message.js" asp-append-version="true"></script>
}
